<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false">
        <shape>
            <solid
                android:color="#1B373D56"/>
            <stroke
                android:width="2dp"
                android:color="@color/primaryPurple"/>
            <corners
                android:radius="50dp"/>
            <padding
                android:top="20dp"
                android:left="20dp"
                android:bottom="20dp"
                android:right="10dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid
                android:color="#1B373D56"/>
            <stroke
                android:width="2dp"
                android:color="@color/primaryPink"/>
            <corners
                android:radius="50dp"/>
            <padding
                android:top="20dp"
                android:left="20dp"
                android:bottom="20dp"
                android:right="10dp" />
        </shape>
    </item>

</selector>